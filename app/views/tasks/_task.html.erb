<tr id="<%= dom_id task %>">
  <td><%= task.id %></td>
  <td><%= task.name %></td>
  <td><%= task.description %></td>
  <td>
    <div style="display: flex">
      <%= link_to "Edit", edit_task_path(task), class:"btn btn-primary" %>&nbsp;
      <%= button_to "Delete", task, method: :delete, class:"btn btn-danger" %>
    </div>
  </td>
</tr>
