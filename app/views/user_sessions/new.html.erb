<h1>Login page</h1>
<%= form_with model: @user, url: user_sessions_path do |f| %>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password %><br>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <br>
  <p>
    <%= f.submit 'Login', class: "btn btn-primary" %>
  </p>
<% end %>